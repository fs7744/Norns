<!-- 
  This file is automatically imported by NuGet into a user's project
  when it targets a single framework, or in classic (pre 2017) csproj projects.
-->
<Project TreatAsLocalProperty="TaskFolder;TaskAssembly">
  <PropertyGroup>
    <TaskAssembly>$(MSBuildThisFileDirectory)..\tasks\netstandard2.0\Norns.StaticWeave.MSBuild.dll</TaskAssembly>
  </PropertyGroup>

  <Target Name="Weaving" AfterTargets="Build">
    <WeavingTask MSBuildProjectDirectory="$(MSBuildProjectDirectory)" />
  </Target>
  
</Project>
